{% extends "base.html.twig" %}
{% block main %}
    <div class="row">
        <div class="span12">
            <div class="widget ">
                <div class="widget-header">
                    <i class="icon-user"></i> <h3>Ajouter un contact</h3>
                </div> <!-- /widget-header -->
                <div class="widget-content row">
                    {{ form_start(form) }}

                    {{ form_errors(form)}}

                    {{ form_row(form.nom) }}
                    {{ form_row(form.prenom) }}
                    {{ form_row(form.specialite) }}
                    {{ form_row(form.adresse) }}
                    {{ form_row(form.numTel) }}

                    {{ form_end(form) }}

                </div>
            </div>
        </div>
    </div>
{% endblock %}