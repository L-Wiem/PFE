{% extends "base.html.twig" %}
{% block main %}
    <div class="row">
        <div class="span12">
            <div class="widget ">
                <div class="widget-header">
                    <i class="icon-user"></i>
                    <h3>Ajouter secretaire</h3>
                </div> <!-- /widget-header -->
                <div class="widget-content row">
                    {#{{ form_start(form) }}#}
                    <form novalidate method="post" class="form-horizontal">
                        {{ form_errors(form) }}

                        {{ form_row(form.nom) }}
                        {{ form_row(form.prenom) }}
                        {{ form_row(form.genre) }}
                        {{ form_row(form.date_naissance) }}
                        {{ form_row(form.etat_civil) }}
                        {{ form_row(form.cin) }}
                        {{ form_row(form.num_contrat) }}
                        {{ form_row(form.date_deb_contrat) }}
                        {{ form_row(form.date_fin_contrat) }}
                        {{ form_row(form.adresse) }}
                        {{ form_row(form.num_tel) }}
                        {{ form_row(form.user.username) }}
                        {{ form_row(form.user.password) }}
                        {{ form_row(form._token) }}
                        {{ form_row(form.Sauvegarder) }}

                    </form>

                </div>
            </div>
        </div>
    </div>
{% endblock %}