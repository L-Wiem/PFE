{% extends "base.html.twig" %}
{% block main %}
    <!-- /span6 -->
    <div class="span12">
        <div class="widget widget-table action-table">
            <div class="widget-header"> <i class="icon-group"></i>
                <h3>Liste des secretaires</h3>
                <a href="{{ path('ajout_secretaire') }}" class="btn btn-success">Ajouter secretaire</a>
            </div>
            <!-- /widget-header -->
            <div class="widget-content">
                <table class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th> Secretaire </th>
                        <th> Genre </th>
                        <th> Date de naissance </th>
                        <th>Etat civil</th>
                        <th> Cin</th>
                        <th> Numero de contrat </th>
                        <th> Debut de contrat </th>
                        <th> Fin de contrat </th>
                        <th> Adresse </th>
                        <th> Numero de telephone </th>
                        <th> </th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for secretaire in secretaires %}
                        <tr>
                            <td> {{ secretaire.nomComplet }}</td>
                            <td> {{ secretaire.genre }} </td>
                            <td> {{ secretaire.dateNaissance|date('d/m/Y') }} </td>
                            <td>{{ secretaire.etatCivil }}</td>
                            <td> {{ secretaire.cin }} </td>
                            <td> {{ secretaire.numContrat }} </td>
                            <td> {{ secretaire.dateDebContrat|date('d/m/Y') }} </td>
                            <td> {{ secretaire.dateFinContrat|date('d/m/Y') }} </td>
                            <td> {{ secretaire.adresse }} </td>
                            <td> {{ secretaire.numTel }} </td>
                            <td>
                                <a href="{{ path('modifier_secretaire' , {'id': secretaire.id} ) }}" class="btn btn-small"><i class="btn-icon-only icon-pencil"> </i>Modifier</a>
                                <a href="{{ path('supprimer_secretaire' , {'id': secretaire.id}) }}" class="btn btn-small btn-danger"><i class="btn-icon-only icon-trash"> </i>Supprimer</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <!-- /widget-content -->
        </div>
        <!-- /widget -->
    </div>
    <!-- /span6 -->
    <div class="span6">

    </div>
{% endblock %}