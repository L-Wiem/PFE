{% extends "base.html.twig" %}
{% block main %}
        <div class="span8">
            <div class="widget widget-table action-table">
                <div class="widget-header">
                    <i class="icon-th-list"></i>
                    <h3>Liste des securites sociales de {{ patient.nomComplet }} </h3>
                    <a href="{{ path('ajout_securite_sociale', {'id': patient.id}) }}" class="btn btn-success pull-right ">Ajouter securite sociale</a>
                </div>
                <div class="widget-content" id="all-data-search">
                    <table class="table table-striped table-bordered">
                        <thead>
                        <tr>
                            <th> Patient</th>
                            <th>Type</th>
                            <th> Date d'expiration</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for securite in patient.securiteSocials %}
                            <tr>
                                <td>{{ patient.nomComplet }}</td>
                                <td>{{ securite.type }}</td>
                                <td> {{ securite.dateExpiration|date('d/m/Y') }} </td>

                                <td> <a href="{{ path('modifier_securite_sociale' , {'securiteId': securite.id , 'patientId': patient.id} ) }}"
                                       class="btn btn-small btn-success"><i class="btn-icon-only icon-ok"> </i>Modifier</a>
                                    <a href="{{ path('supprimer_securite_sociale' , {'id': securite.id}) }}"
                                       class="btn btn-danger btn-small"><i class="btn-icon-only icon-remove"> </i>Archiver</a>
                               </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
{% endblock %}
{% block javascript %}
    {{ parent() }}
    <script>
        $(document).ready(function () {
            $(".liste_type_patient").chosen();
        })
    </script>
{% endblock %}